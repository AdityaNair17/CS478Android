<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Welcome to Movie Client"
        android:textSize="30dp"
        android:layout_gravity="center"/>


    <TextView
        android:id="@+id/serviceStatus"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="24dp"
        android:layout_margin="10dp"/>


    <Button
        android:id="@+id/bindService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bind Movie Service" />

    <Button
        android:id="@+id/unbindService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unbind Movie Service" />

    <Button
        android:id="@+id/movies_list_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movies List" />

    <TextView
        android:id="@+id/text_view_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Enter Movie Number"
        android:textSize="24dp"/>

    <Spinner
        android:id="@+id/numberSpinner"
        android:layout_height="50dp"
        android:layout_width="160dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/specific_movie_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Details" />

    <Button
        android:id="@+id/specific_url_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Video" />




</LinearLayout>